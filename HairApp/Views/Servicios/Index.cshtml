@model IEnumerable<HairApp.Models.Servicio>

@{
    ViewData["Title"] = "Servicios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-scissors me-2"></i>Gestión de Servicios
        </h2>
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalCrear">
            <i class="bi bi-plus-circle me-1"></i>Nuevo Servicio
        </button>
    </div>

    <form method="get" asp-action="Index" class="mb-3">
        <div class="input-group">
            <input type="hidden" name="cantidadPorPagina" value="@ViewBag.CantidadPorPagina" />

            <input type="text" name="search" class="form-control" placeholder="Buscar servicio por nombre o descripción..." value="@ViewBag.Search" />
            <button type="submit" class="btn btn-outline-primary">
                <i class="bi bi-search"></i> Buscar
            </button>
            @if (!string.IsNullOrEmpty(ViewBag.Search))
            {
                <a asp-action="Index" class="btn btn-outline-secondary" title="Limpiar búsqueda">
                    <i class="bi bi-x-lg"></i>
                </a>
            }
        </div>
    </form>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-primary">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                            <th>@Html.DisplayNameFor(model => model.Precio)</th>
                            <th>@Html.DisplayNameFor(model => model.Duracion)</th>
                            <th class="text-center" width="150">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="fw-bold">@item.Nombre</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Descripcion))
                                        {
                                            <span title="@item.Descripcion">
                                                @(item.Descripcion.Length > 50 ? item.Descripcion.Substring(0, 50) + "..." : item.Descripcion)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">Sin descripción</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-success fs-6">$@item.Precio.ToString("N2")</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-info text-dark">@item.Duracion min</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <button class="btn btn-outline-primary"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#modalDetalles"
                                                    data-id="@item.Id_servicio"
                                                    data-nombre="@item.Nombre"
                                                    data-descripcion="@item.Descripcion"
                                                    data-precio="@item.Precio"
                                                    data-duracion="@item.Duracion"
                                                    title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </button>

                                            <button class="btn btn-outline-warning"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#modalEditar"
                                                    data-id="@item.Id_servicio"
                                                    data-nombre="@item.Nombre"
                                                    data-descripcion="@item.Descripcion"
                                                    data-precio="@item.Precio"
                                                    data-duracion="@item.Duracion"
                                                    title="Editar servicio">
                                                <i class="bi bi-pencil-square"></i>
                                            </button>

                                            <button class="btn btn-outline-danger"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#modalEliminar"
                                                    data-id="@item.Id_servicio"
                                                    data-nombre="@item.Nombre"
                                                    title="Eliminar servicio">
                                                <i class="bi bi-trash3"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-5">
                                    <i class="bi bi-search display-4 d-block mb-3 opacity-50"></i>
                                    <h5>No se encontraron resultados</h5>
                                    <p>Intenta con otra búsqueda o agrega un nuevo servicio.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @if (ViewBag.TotalPaginas > 1)
        {
            <div class="card-footer bg-white d-flex justify-content-between align-items-center py-3 flex-wrap">

                <div class="text-muted small mb-2 mb-md-0">
                    Mostrando <strong>@ViewBag.RegistroInicio</strong> a <strong>@ViewBag.RegistroFin</strong> de <strong>@ViewBag.TotalRegistros</strong> servicios
                </div>

                <nav aria-label="Navegación de páginas">
                    <ul class="pagination pagination-sm mb-0">

                        <li class="page-item @(ViewBag.PaginaActual == 1 ? "disabled" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-pagina="@(ViewBag.PaginaActual - 1)"
                               asp-route-search="@ViewBag.Search"
                               asp-route-cantidadPorPagina="@ViewBag.CantidadPorPagina">
                                <i class="bi bi-chevron-left"></i> Anterior
                            </a>
                        </li>

                        @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
                        {
                            <li class="page-item @(ViewBag.PaginaActual == i ? "active" : "")">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-pagina="@i"
                                   asp-route-search="@ViewBag.Search"
                                   asp-route-cantidadPorPagina="@ViewBag.CantidadPorPagina">
                                    @i
                                </a>
                            </li>
                        }

                        <li class="page-item @(ViewBag.PaginaActual == ViewBag.TotalPaginas ? "disabled" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-pagina="@(ViewBag.PaginaActual + 1)"
                               asp-route-search="@ViewBag.Search"
                               asp-route-cantidadPorPagina="@ViewBag.CantidadPorPagina">
                                Siguiente <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="modalCrear" tabindex="-1" aria-labelledby="modalCrearLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalCrearLabel">
                    <i class="bi bi-plus-circle me-2"></i>Nuevo Servicio
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Crear" method="post">
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Nombre del Servicio *</label>
                                <input type="text" name="Nombre" class="form-control" required
                                       placeholder="Ej: Corte de Cabello, Coloración, etc." />
                                <div class="form-text">El nombre debe ser único</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Precio ($) *</label>
                                <input type="number" step="0.01" name="Precio" class="form-control" required
                                       placeholder="0.00" min="0.01" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Duración (minutos) *</label>
                                <input type="number" name="Duracion" class="form-control" required
                                       placeholder="30" min="1" max="480" />
                                <div class="form-text">Duración estimada del servicio</div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Descripción</label>
                        <textarea name="Descripcion" class="form-control" rows="3"
                                  placeholder="Descripción detallada del servicio..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle me-1"></i>Guardar Servicio
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="modalDetalles" tabindex="-1" aria-labelledby="modalDetallesLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="modalDetallesLabel">
                    <i class="bi bi-eye me-2"></i>Detalles del Servicio
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Nombre del Servicio</label>
                            <p class="form-control-plaintext" id="detalle-nombre">-</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Precio</label>
                            <p class="form-control-plaintext">
                                <span class="badge bg-success fs-6" id="detalle-precio">-</span>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Duración</label>
                            <p class="form-control-plaintext">
                                <span class="badge bg-info text-dark" id="detalle-duracion">-</span>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">ID del Servicio</label>
                            <p class="form-control-plaintext text-muted" id="detalle-id">-</p>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Descripción</label>
                    <div class="card">
                        <div class="card-body">
                            <p class="card-text" id="detalle-descripcion" style="min-height: 100px;">
                                <span class="text-muted">Sin descripción disponible</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>Cerrar
                </button>
                <button type="button" class="btn btn-warning" id="btn-editar-desde-detalles">
                    <i class="bi bi-pencil-square me-1"></i>Editar Servicio
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalEditar" tabindex="-1" aria-labelledby="modalEditarLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title" id="modalEditarLabel">
                    <i class="bi bi-pencil-square me-2"></i>Editar Servicio
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Editar" method="post">
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="edit-id" name="Id_servicio" />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Nombre del Servicio *</label>
                                <input type="text" id="edit-nombre" name="Nombre" class="form-control" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Precio ($) *</label>
                                <input type="number" step="0.01" id="edit-precio" name="Precio" class="form-control" required />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Duración (minutos) *</label>
                                <input type="number" id="edit-duracion" name="Duracion" class="form-control" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Descripción</label>
                                <textarea id="edit-descripcion" name="Descripcion" class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle me-1"></i>Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="modalEliminar" tabindex="-1" aria-labelledby="modalEliminarLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="modalEliminarLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i>Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Eliminar" method="post">
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="delete-id" name="id" />
                    <div class="text-center">
                        <i class="bi bi-trash3 text-danger display-4 d-block mb-3"></i>
                        <h6>¿Estás seguro de que deseas eliminar este servicio?</h6>
                        <p class="text-muted">Servicio: <strong id="delete-nombre"></strong></p>
                        <p class="text-danger small">
                            <i class="bi bi-info-circle me-1"></i>
                            Esta acción no se puede deshacer.
                        </p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash3 me-1"></i>Eliminar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Cargar datos en el modal Detalles
        document.addEventListener('DOMContentLoaded', function() {
            const modalDetalles = document.getElementById('modalDetalles');
            if (modalDetalles) {
                modalDetalles.addEventListener('show.bs.modal', function (event) {
                    const button = event.relatedTarget;
                    const id = button.getAttribute('data-id');
                    const nombre = button.getAttribute('data-nombre');
                    const descripcion = button.getAttribute('data-descripcion') || 'Sin descripción disponible';
                    const precio = button.getAttribute('data-precio');
                    const duracion = button.getAttribute('data-duracion');

                    // Llenar los campos del modal de detalles
                    document.getElementById('detalle-id').textContent = '#' + id;
                    document.getElementById('detalle-nombre').textContent = nombre;
                    document.getElementById('detalle-descripcion').textContent = descripcion;
                    document.getElementById('detalle-precio').textContent = '$' + parseFloat(precio).toFixed(2);
                    document.getElementById('detalle-duracion').textContent = duracion + ' minutos';

                    // Configurar el botón de editar desde detalles
                    document.getElementById('btn-editar-desde-detalles').onclick = function() {
                        // Cerrar modal de detalles
                        bootstrap.Modal.getInstance(modalDetalles).hide();

                        // Llenar y abrir modal de editar
                        document.getElementById('edit-id').value = id;
                        document.getElementById('edit-nombre').value = nombre;
                        document.getElementById('edit-descripcion').value = descripcion !== 'Sin descripción disponible' ? descripcion : '';
                        document.getElementById('edit-precio').value = precio;
                        document.getElementById('edit-duracion').value = duracion;

                        // Abrir modal de editar
                        const modalEditar = new bootstrap.Modal(document.getElementById('modalEditar'));
                        modalEditar.show();
                    };
                });
            }

            // Cargar datos en el modal Editar
            const modalEditar = document.getElementById('modalEditar');
            if (modalEditar) {
                modalEditar.addEventListener('show.bs.modal', function (event) {
                    const button = event.relatedTarget;
                    document.getElementById('edit-id').value = button.getAttribute('data-id');
                    document.getElementById('edit-nombre').value = button.getAttribute('data-nombre');
                    document.getElementById('edit-descripcion').value = button.getAttribute('data-descripcion') || '';
                    document.getElementById('edit-precio').value = button.getAttribute('data-precio');
                    document.getElementById('edit-duracion').value = button.getAttribute('data-duracion');
                });
            }

            // Cargar datos en el modal Eliminar
            const modalEliminar = document.getElementById('modalEliminar');
            if (modalEliminar) {
                modalEliminar.addEventListener('show.bs.modal', function (event) {
                    const button = event.relatedTarget;
                    document.getElementById('delete-id').value = button.getAttribute('data-id');
                    document.getElementById('delete-nombre').textContent = button.getAttribute('data-nombre');
                });
            }

            // Auto-ocultar alertas después de 5 segundos
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }, 5000);
            });
        });
    </script>

    <style>
        .table th {
            border-top: none;
            font-weight: 600;
        }

        .btn-group .btn {
            margin: 0 2px;
            border-radius: 4px !important;
        }

        .badge {
            font-size: 0.85em;
        }

        .table-responsive {
            border-radius: 0.35rem;
        }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }

        .btn-outline-primary:hover {
            background-color: #0d6efd;
            color: white;
        }

        .btn-outline-warning:hover {
            background-color: #ffc107;
            color: black;
        }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: white;
        }

        .form-control-plaintext {
            padding: 0.375rem 0;
            margin-bottom: 0;
            line-height: 1.5;
            background-color: transparent;
            border: solid transparent;
            border-width: 1px 0;
        }
    </style>
}