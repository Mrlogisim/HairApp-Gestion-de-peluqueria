@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HairApp</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Sidebar.css" asp-append-version="true" />

</head>
<body>

    <!-- Barra lateral -->
    <nav class="sidebar">
        <div class="px-3 mb-3">
            <h4 class="text-white">HairApp</h4>
        </div>
        <ul class="nav flex-column w-100">
            <li class="nav-item">
                <a class="nav-link @(ViewData["Title"]?.ToString() == "Inicio" ? "active" : "")" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door"></i>Inicio
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Turnos" asp-action="Index">
                    <i class="bi bi-calendar-check"></i>Turnos
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Peluqueros" asp-action="Index">
                    <i class="bi bi-person-badge"></i>Peluqueros
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Clientes" asp-action="Index">
                    <i class="bi bi-people"></i>Clientes
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Servicios" asp-action="Index">
                    <i class="bi bi-scissors"></i>Servicios
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Promociones" asp-action="Index">
                    <i class="bi bi-gift me-2"></i>Promociones
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Insumos" asp-action="Index">
                    <i class="bi bi-box-seam"></i>Insumos
                </a>
            </li>
            
            <li class="nav-item">
                <a class="nav-link" asp-controller="Reportes" asp-action="Index">
                    <i class="bi bi-bar-chart-line"></i>Reportes
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Auditoria" asp-action="Index">
                    <i class="bi bi-shield-check"></i>Auditoria
                </a>
            </li>
        </ul>
    </nav>

    <!-- Contenido principal -->
    <div class="main-content">

        <!-- Barra superior (topbar) -->
        <div class="topbar">

            <div class="dropdown">

                <a class="profile-icon" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" title="Perfil de usuario">
                    <i class="bi bi-person"></i>
                </a>

                <ul class="dropdown-menu dropdown-menu-end shadow">
                    <li>
                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                            <i class="bi bi-person-circle"></i> Perfil
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-controller="Account" asp-action="Settings">
                            <i class="bi bi-gear"></i> Configuración
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-controller="Home" asp-action="ActivityLog">
                            <i class="bi bi-list-check"></i> Actividad de log
                        </a>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li> @* Implementación del logout *@
                        
                        <form class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                            <button type="submit" class="nav-link btn btn-link text-dark">Cerrar sesión</button>
                        </form>

                    </li>
                </ul>
            </div>
        </div>

        <!-- Contenido dinámico -->
        <main role="main">
            @RenderBody() @* ==> marcador de posición *@
        </main>

        <!-- Pie de página -->
        <footer>
            &copy; 2025 - HairApp - <a asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
